<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/dark_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:alpha="0.5"
        android:background="@android:color/black"
        android:contentDescription="@string/dark_semi_transparent_shadow"
        android:clickable="true"/>

    <RelativeLayout
                android:id="@+id/top_relative_layout"
                android:layout_width="@dimen/rhythm_beat_types_list_width"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/list_row_background"
        >

        <ListView
            android:id="@android:id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:dividerHeight="2dp"
            android:animateLayoutChanges="true"/>

    </RelativeLayout>
</RelativeLayout>