    <dimen name="play_controls_button_stroke_width">5dp</dimen>
    <dimen name="play_controls_button_height">70dp</dimen>
    <dimen name="play_controls_button_width">67dp</dimen>
    <dimen name="play_controls_button_margin">0dp</dimen>
    <dimen name="bpm_button_width">90dp</dimen>
    <dimen name="bpm_button_img_padding">10dp</dimen>
    <dimen name="bpm_dialog_width">300dp</dimen>
    <dimen name="bpm_dialog_height">300dp</dimen>
    <dimen name="repeats_button_width">83dp</dimen>

    <dimen name="undo_menu_button_padding">15dp</dimen>

    <!--rhythm draughting -->
    <dimen name="edit_draw_numbers_inside_top_margin">10dp
    </dimen><!-- edit rhythm, when numbers are placed inside top, smaller dimens for shorter devices -->
    <dimen name="draw_numbers_image_margin">3dp</dimen>
    <dimen name="drag_dot_stroke">5dp</dimen>

    <!-- to get the same behaviour as a normal dialog (for the centre fragment for popups) -->
    <item name="dialog_width_portraint" type="fraction">95%</item>
    <item name="dialog_width_landscape" type="fraction">102.5%</item>

    <!-- fab dimens -->
    <dimen name="fab_elevation">8dp</dimen>
    <dimen name="fab_press_translation_z">9dp</dimen>
    <dimen name="fab_size">56dp</dimen>
    <dimen name="fab_size_small">40dp</dimen>
    <dimen name="fab_icon_size">24dp</dimen>
    <!-- info button -->
    <dimen name="secondary_action_size">24dp</dimen>

    <dimen name="beats_and_sounds_extra_button_size">49dp</dimen>

    <!-- default for ad margin means assume screen only wide enough to show 4 action bar icons, dimens(w530) sets the width where can show more) -->
    <dimen name="native_ad_margin_for_action_bar_icons">200dp</dimen>
    <dimen name="native_ad_width">280dp</dimen>
    <dimen name="native_ad_height">80dp</dimen>
    <dimen name="fab_margin">16dp</dimen>

