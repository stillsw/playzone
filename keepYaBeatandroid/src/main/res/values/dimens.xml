<resources>

    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="small_horizontal_margin">8dp</dimen>
    <dimen name="vertical_item_separation">8dp</dimen>

    <!-- rhythm play bar -->
    <dimen name="title_bar_name_top_margin">40dp</dimen>
    <dimen name="title_bar_more_less_min_width">90dp</dimen>
    <dimen name="title_bar_more_less_right_margin">80dp
    </dimen><!-- right margin, incorporates fab button and margins (24) -->
    <dimen name="title_bar_rhythm_name_right_margin">170dp
    </dimen><!-- right margin, adds both above nb. "more/less" text (lang dependant) -->

    <!-- welcome screen in a wide format doesn't look good with lots of vertical space -->
    <dimen name="welcome_screen_vert_space">5dp</dimen>
    <dimen name="welcome_screen_horizontal_margin">5dp</dimen>

    <dimen name="rhythm_beat_types_list_width">400dp
    </dimen><!-- only used when layout > 400dp, see layout files -->
    <dimen name="rhythms_list_rhythm_img_width">250dp</dimen>
    <dimen name="rhythms_list_rhythm_img_height">100dp</dimen>

    <dimen name="rhythm_beat_types_volume_width">200dp</dimen>
