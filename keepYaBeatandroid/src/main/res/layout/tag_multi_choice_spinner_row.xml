<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tag_choose_row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    >

    <CheckBox
        android:id="@+id/tag_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/small_horizontal_margin"
        android:layout_marginLeft="@dimen/small_horizontal_margin"
        android:clickable="false"
        />

    <TextView
        android:id="@+id/tag_name"
        style="@style/ButtonBarButton"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tag_checkbox"
        android:layout_toEndOf="@+id/tag_checkbox"
        android:ellipsize="end"
        android:clickable="false"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tag_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/internal_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</RelativeLayout>