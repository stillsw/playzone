<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/options_card"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    android:clickable="true"
    android:visibility="gone">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearConstraintLayout"
        android:layout_margin="2dp">

        <ImageButton
            android:src="@drawable/ic_close_white_24dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/close_card_btn"
            app:layout_constraintEnd_toEndOf="@+id/linearConstraintLayout"
            app:layout_constraintTop_toTopOf="@+id/linearConstraintLayout"/>

        <ImageButton
            android:src="@drawable/ic_audiotrack_white_24dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="57dp"
            android:layout_height="53dp"
            android:id="@+id/open_rhythm_btn"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintStart_toStartOf="@+id/linearConstraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/close_card_btn"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/open_rhythm"
            app:layout_constraintStart_toEndOf="@id/open_rhythm_btn"
            android:labelFor="@id/open_rhythm_btn"
            android:text="@string/menuOpenRhythm"
            style="@style/ButtonBarButton"
            android:gravity="center_vertical"
            tools:layout_editor_absoluteX="57dp"
            app:layout_constraintTop_toTopOf="@+id/open_rhythm_btn"
            app:layout_constraintBottom_toBottomOf="@+id/open_rhythm_btn"/>

        <ImageButton
            android:src="@drawable/ic_create_white_24dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="57dp"
            android:layout_height="53dp"
            android:id="@+id/edit_rhythm_btn"
            app:layout_constraintLeft_toLeftOf="@+id/open_rhythm_btn"
            app:layout_constraintTop_toBottomOf="@+id/open_rhythm_btn"
            />

        <TextView
            android:text="@string/menuEditRhythm"
            style="@style/ButtonBarButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:id="@+id/edit_rhythm"
            android:labelFor="@id/edit_rhythm_btn"
            app:layout_constraintStart_toStartOf="@+id/open_rhythm"
            app:layout_constraintTop_toTopOf="@+id/edit_rhythm_btn"
            app:layout_constraintBottom_toBottomOf="@+id/edit_rhythm_btn"/>

        <ImageButton
            android:src="@drawable/ic_save_white_24dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="57dp"
            android:layout_height="53dp"
            android:id="@+id/save_rhythm_btn"
            app:layout_constraintLeft_toLeftOf="@+id/open_rhythm_btn"
            app:layout_constraintTop_toBottomOf="@+id/edit_rhythm_btn"/>

        <TextView
            android:text="@string/menuSetNameRhythm"
            style="@style/ButtonBarButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:id="@+id/save_rhythm"
            android:labelFor="@id/save_rhythm_btn"
            app:layout_constraintStart_toStartOf="@+id/open_rhythm"
            app:layout_constraintTop_toTopOf="@+id/save_rhythm_btn"
            app:layout_constraintBottom_toBottomOf="@+id/save_rhythm_btn"/>

        <ImageButton
            android:src="@drawable/ic_content_copy_white_24dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="57dp"
            android:layout_height="53dp"
            android:id="@+id/dupe_rhythm_btn"
            app:layout_constraintLeft_toLeftOf="@+id/open_rhythm_btn"
            app:layout_constraintTop_toBottomOf="@+id/save_rhythm_btn"/>

        <TextView
            android:text="@string/menuCloneRhythm"
            style="@style/ButtonBarButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:id="@+id/dupe_rhythm"
            android:labelFor="@id/dupe_rhythm_btn"
            app:layout_constraintStart_toStartOf="@+id/open_rhythm"
            app:layout_constraintTop_toTopOf="@+id/dupe_rhythm_btn"
            app:layout_constraintBottom_toBottomOf="@+id/dupe_rhythm_btn"/>

        <ImageButton
            android:src="@drawable/ic_delete_white_24dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="57dp"
            android:layout_height="53dp"
            android:id="@+id/delete_rhythm_btn"
            app:layout_constraintLeft_toLeftOf="@+id/open_rhythm_btn"
            app:layout_constraintTop_toBottomOf="@+id/dupe_rhythm_btn"/>

        <TextView
            android:text="@string/menuDeleteRhythm"
            style="@style/ButtonBarButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:id="@+id/delete_rhythm"
            android:labelFor="@id/delete_rhythm_btn"
            app:layout_constraintStart_toStartOf="@+id/open_rhythm"
            app:layout_constraintTop_toTopOf="@+id/delete_rhythm_btn"
            app:layout_constraintBottom_toBottomOf="@+id/delete_rhythm_btn"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
