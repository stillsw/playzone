<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/gifts_lists_row_height"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin" >

    <ImageView
        android:id="@+id/bottom_chain_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="0dp"
        android:contentDescription="@string/straight_chain_image"
        android:scaleType="fitCenter"
        android:src="@drawable/chain_end" />

    <ImageView
        android:id="@+id/chain_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="0dp"
        android:contentDescription="@string/straight_chain_image"
        android:scaleType="fitCenter"
        android:src="@drawable/chain_straight" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/chain_image" >

        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/merge_gift_list_row" />
    </RelativeLayout>

</RelativeLayout>