<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/all_chains_gifts_lists_row_height"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin" >

    <include layout="@layout/merge_gift_list_row" />

    <TextView
        android:id="@+id/list_chain_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_touched_by"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/image_container"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/chain_image"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image_container"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/straight_chain_image"
        android:scaleType="fitCenter"
        android:src="@drawable/chain_bent" />

</RelativeLayout>